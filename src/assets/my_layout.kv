<DataRow>:
  orientation: "horizontal"
  size_hint_x: 1
  size_hint_y: None
  height: "15dp"
  md_bg_color: [0.25, 0.25, 0.25, 1]

  MDLabel:
    text: f"{root.datetime_str[-11:-9]}/{root.datetime_str[-8:]}"
    halign: "left"
    font_size: "10dp"
    theme_text_color: "Custom"
    text_color: [0.59, 0.59, 0.59, 1]
  MDLabel:
    text: f"Lv:{int(root.headache)}"
    size_hint_x: 0.5
    halign: "center"
    font_size: "10dp"
    theme_text_color: "Custom"
    text_color: [0.59, 0.59, 0.59, 1]
  MDLabel:
    text: f"{root.humidity:.1f}%"
    halign: "center"
    font_size: "10dp"
    theme_text_color: "Custom"
    text_color: [0.59, 0.59, 0.59, 1]
  MDLabel:
    text: f"{root.pressure:.0f}hPa ({root.pressure_change:+.1f}/h)"
    size_hint_x: 1.5
    halign: "center"
    font_size: "10dp"
    theme_text_color: "Custom"
    text_color: [0.59, 0.59, 0.59, 1]
  MDTextButton:
    text: " [変更]"
    font_size: "8dp"
    pos_hint: {"center_y": .5} 
    theme_text_color: "Custom"
    text_color: [0.59, 0.59, 0.59, 1] 
    on_release: root.change_action()  
  MDTextButton:
    text: " [削除]"
    font_size: "8dp"
    pos_hint: {"center_y": .5} 
    theme_text_color: "Custom"
    text_color: [0.59, 0.59, 0.59, 1]
    on_release: root.delete_action()